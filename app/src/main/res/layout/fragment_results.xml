<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ResultsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/componentText1"
                style="@style/TextViewStyle"
                android:text="Корпус"
                app:layout_constraintEnd_toStartOf="@+id/componentText2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/componentImage1"
                style="@style/ImageViewStyle"
                app:layout_constraintEnd_toEndOf="@+id/componentText1"
                app:layout_constraintStart_toStartOf="@+id/componentText1"
                app:layout_constraintTop_toBottomOf="@+id/componentText1" />

            <TextView
                android:id="@+id/componentText2"
                style="@style/TextViewStyle"
                android:text="Процессор"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/componentText1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/componentImage2"
                style="@style/ImageViewStyle"
                app:layout_constraintEnd_toEndOf="@+id/componentText2"
                app:layout_constraintStart_toStartOf="@+id/componentText2"
                app:layout_constraintTop_toBottomOf="@+id/componentText2" />



            <TextView
                android:id="@+id/componentText3"
                style="@style/TextViewStyle"
                android:text="Материнская плата"
                app:layout_constraintEnd_toEndOf="@+id/componentImage1"
                app:layout_constraintStart_toStartOf="@+id/componentImage1"
                app:layout_constraintTop_toBottomOf="@+id/componentImage1" />

            <ImageView
                android:id="@+id/componentImage3"
                style="@style/ImageViewStyle"
                app:layout_constraintEnd_toEndOf="@+id/componentText3"
                app:layout_constraintStart_toStartOf="@+id/componentText3"
                app:layout_constraintTop_toBottomOf="@+id/componentText3" />

            <TextView
                android:id="@+id/componentText4"
                style="@style/TextViewStyle"
                android:text="Видеокарта"
                app:layout_constraintEnd_toEndOf="@+id/componentImage2"
                app:layout_constraintStart_toStartOf="@+id/componentImage2"
                app:layout_constraintTop_toBottomOf="@+id/componentImage2" />

            <ImageView
                android:id="@+id/componentImage4"
                style="@style/ImageViewStyle"
                app:layout_constraintEnd_toEndOf="@+id/componentText4"
                app:layout_constraintStart_toStartOf="@+id/componentText4"
                app:layout_constraintTop_toBottomOf="@+id/componentText4" />



            <TextView
                android:id="@+id/componentText5"
                style="@style/TextViewStyle"
                android:text="Оперативная память"
                app:layout_constraintEnd_toEndOf="@+id/componentImage3"
                app:layout_constraintStart_toStartOf="@+id/componentImage3"
                app:layout_constraintTop_toBottomOf="@+id/componentImage3" />

            <ImageView
                android:id="@+id/componentImage5"
                style="@style/ImageViewStyle"
                app:layout_constraintEnd_toEndOf="@+id/componentText5"
                app:layout_constraintStart_toStartOf="@+id/componentText5"
                app:layout_constraintTop_toBottomOf="@+id/componentText5" />

            <TextView
                android:id="@+id/componentText6"
                style="@style/TextViewStyle"
                android:text="Память"
                app:layout_constraintEnd_toEndOf="@+id/componentImage4"
                app:layout_constraintStart_toStartOf="@+id/componentImage4"
                app:layout_constraintTop_toBottomOf="@+id/componentImage4" />

            <ImageView
                android:id="@+id/componentImage6"
                style="@style/ImageViewStyle"
                app:layout_constraintEnd_toEndOf="@+id/componentText6"
                app:layout_constraintStart_toStartOf="@+id/componentText6"
                app:layout_constraintTop_toBottomOf="@+id/componentText6" />



            <TextView
                android:id="@+id/componentText7"
                style="@style/TextViewStyle"
                android:text="Охлаждение на процессор"
                app:layout_constraintEnd_toEndOf="@+id/componentImage5"
                app:layout_constraintStart_toStartOf="@+id/componentImage5"
                app:layout_constraintTop_toBottomOf="@+id/componentImage5" />

            <ImageView
                android:id="@+id/componentImage7"
                style="@style/ImageViewStyle"
                app:layout_constraintEnd_toEndOf="@+id/componentText7"
                app:layout_constraintStart_toStartOf="@+id/componentText7"
                app:layout_constraintTop_toBottomOf="@+id/componentText7" />

            <TextView
                android:id="@+id/componentText8"
                style="@style/TextViewStyle"
                android:text="Блок питания"
                app:layout_constraintEnd_toEndOf="@+id/componentImage6"
                app:layout_constraintStart_toStartOf="@+id/componentImage6"
                app:layout_constraintTop_toBottomOf="@+id/componentImage6" />

            <ImageView
                android:id="@+id/componentImage8"
                style="@style/ImageViewStyle"
                app:layout_constraintEnd_toEndOf="@+id/componentText8"
                app:layout_constraintStart_toStartOf="@+id/componentText8"
                app:layout_constraintTop_toBottomOf="@+id/componentText8" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:background="@color/orange_1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Итоговая цена:"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/componentImage8"
                app:layout_constraintStart_toStartOf="@+id/componentImage7"
                app:layout_constraintTop_toBottomOf="@+id/componentImage7" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>